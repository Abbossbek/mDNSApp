{
  "app": {
    "background": {
      "scripts": [
        "background.js",
        "dns.js"
      ]
    }
  }, 
  "description": "Browses mDNS services on the local network", 
  "manifest_version": 2, 
  "name": "Laundris mDNS Browser", 
  "permissions": [
    "system.network",
    "background"
  ],  
  "icons": {
    "16": "icons/rfid_16.png",
    "32": "icons/rfid_32.png",
    "64": "icons/rfid_64.png",
    "128": "icons/rfid_128.png",
    "256": "icons/rfid_256.png"
},
  "sockets": {
    "udp": {
      "bind": "*", 
      "send": "*"
    },
    "tcpServer" : {
      "listen": ["*"]
    }
  }, 
  "version": "1.0"
}
